
{
  "manifest_version": 3,
  "name": "Glass Pane Notes",
  "version": "1.0",
  "description": "A floating, semi-transparent notes panel for every webpage.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Toggle Glass Pane Notes"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Toggle the notes panel"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
