{
  "manifest_version": 3,
  "name": "Glass Pane Notes",
  "version": "1.0",
  "description": "A Notion-themed notes app that can be used as a browser extension.",
  "permissions": [
    "contextMenus",
    "storage",
    "system.display",
    "windows"
  ],
  "action": {
    "default_title": "Toggle Notes"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-notes": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Toggle the notes panel"
    }
  }
}
