{
  "manifest_version": 3,
  "name": "Glass Pane Notes",
  "version": "1.0",
  "description": "A Notion-themed notes app that can be used as a browser extension.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_title": "Toggle Notes"
  },
  "commands": {
    "toggle-notes": {
      "suggested_key": {
        "default": "Alt+Shift+N"
      },
      "description": "Toggle the notes panel"
    }
  }
}
